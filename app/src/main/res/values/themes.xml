<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyMoney" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#993B8135</item>
        <!-- Customize your theme here. -->

        <item name="colorControlNormal">@color/primary_color</item>
        <item name="colorControlActivated">@color/primary_color</item>
        <item name="colorControlHighlight">@color/primary_color</item>
    </style>

    <style name="DarkModeSwitch" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlNormal">#FFEB3B</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#FFFFFF</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>